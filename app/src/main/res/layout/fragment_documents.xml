<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root"
    android:background="@android:color/white">


    <LinearLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/layout_bottom"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/layout_import"
            android:layout_weight="1"
            android:background="@color/album_content_color"
            android:layout_width="0dp"
            android:paddingBottom="3dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/btn_import"
                android:layout_centerHorizontal="true"
                android:background="@drawable/btn_import_style"
                android:layout_width="35dp"
                android:layout_height="35dp" />

            <TextView
                android:text="Import"
                android:layout_below="@id/btn_import"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_wifiupload"
            android:layout_weight="1"
            android:background="@color/album_content_color"
            android:layout_width="0dp"
            android:paddingBottom="3dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/btn_user"
                android:layout_centerHorizontal="true"
                android:background="@drawable/btn_wifiupload_style"
                android:layout_width="35dp"
                android:layout_height="35dp" />

            <TextView
                android:text="WIFI Upload"
                android:layout_below="@id/btn_user"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_above="@id/layout_bottom"
        android:id="@+id/layout_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>
