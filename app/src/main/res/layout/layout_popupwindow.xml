<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="#bb000000"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/layout_share"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:paddingBottom="3dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/btn_share"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_share"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <TextView
            android:text="Share"
            android:textColor="@android:color/white"
            android:layout_below="@id/btn_share"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_privacy"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:paddingBottom="3dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/btn_privacy"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_privacy"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <TextView
            android:text="Privacy"
            android:textColor="@android:color/white"
            android:layout_below="@id/btn_privacy"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout_rename"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:paddingBottom="3dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/btn_rename"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_rename"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <TextView
            android:text="Rename"
            android:textColor="@android:color/white"
            android:layout_below="@id/btn_rename"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_move"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:paddingBottom="3dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/btn_move"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_move"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <TextView
            android:text="Move"
            android:textColor="@android:color/white"
            android:layout_below="@id/btn_move"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_delete"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:paddingBottom="3dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/btn_delete"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_delete"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <TextView
            android:text="Delete"
            android:textColor="@android:color/white"
            android:layout_below="@id/btn_delete"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>